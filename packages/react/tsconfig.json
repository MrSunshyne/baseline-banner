{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Declarations */
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    
    /* Path mapping for workspace packages - for IDE only, build uses node_modules */
    "baseUrl": ".",
    "paths": {
      "@baseline-banner/core": ["../core/dist/index.d.ts"],
      "@baseline-banner/core/*": ["../core/dist/*"],
      "@baseline-banner/styles": ["../styles/dist/index.css"],
      "@baseline-banner/styles/*": ["../styles/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
